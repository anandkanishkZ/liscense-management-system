# Zwicky Technology License Management System
# Environment Configuration Template
# 
# Copy this file to .env and update the values for your environment
# Remove the .example extension: cp .env.example .env

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
LMS_DB_HOST=127.0.0.1
LMS_DB_NAME=lms
LMS_DB_USER=root
LMS_DB_PASS=admin123
LMS_DB_CHARSET=utf8mb4

# ==============================================
# APPLICATION URLS
# ==============================================
# Base URL of your license management system
# Leave empty for auto-detection
LMS_BASE_URL=127.0.0.1

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# From email address for system notifications
LMS_EMAIL_FROM=noreply@yourdomain.com
LMS_EMAIL_FROM_NAME=Your Company License System
LMS_ADMIN_EMAIL=admin@yourdomain.com

# SMTP Settings (for email notifications)
LMS_SMTP_HOST=smtp.gmail.com
LMS_SMTP_PORT=587
LMS_SMTP_USERNAME=your-smtp-username
LMS_SMTP_PASSWORD=your-smtp-password
LMS_SMTP_ENCRYPTION=tls

# ==============================================
# SECURITY SETTINGS
# ==============================================
# JWT Secret Key (generate a long, random string)
LMS_JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here

# Encryption Key (generate a long, random string)
LMS_ENCRYPTION_KEY=your-very-long-and-secure-encryption-key-here

# ==============================================
# SYSTEM SETTINGS
# ==============================================
# Enable debug mode (set to false in production)
LMS_DEBUG_MODE=false

# Enable maintenance mode
LMS_MAINTENANCE_MODE=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LMS_LOG_LEVEL=INFO

# ==============================================
# LICENSE SETTINGS
# ==============================================
# Default license duration in days
LMS_DEFAULT_LICENSE_DURATION=365

# Maximum activations per license
LMS_MAX_ACTIVATIONS_PER_LICENSE=3

# Grace period for expired licenses (days)
LMS_GRACE_PERIOD_DAYS=7

# ==============================================
# API RATE LIMITING
# ==============================================
# Requests per hour per IP
LMS_API_RATE_LIMIT=100

# Burst requests per minute per IP
LMS_API_BURST_LIMIT=10